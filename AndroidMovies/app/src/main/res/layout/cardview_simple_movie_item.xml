<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/one_card_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="40dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <ImageView
        android:id="@+id/cardview_poster"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/aladdin"
        />


    <TextView
        android:id="@+id/cardview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:text="Aladdin"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/cardview_poster"
        android:maxLines="2"
        />


        <TextView
            android:id="@+id/cardview_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:text="31/03/2021"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_alignStart="@id/cardview_title"
            android:layout_below="@id/cardview_title"
            />

        <TextView
            android:id="@+id/cardview_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:text="8 / 10"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_alignStart="@id/cardview_title"
            android:layout_alignBottom="@id/cardview_poster"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>